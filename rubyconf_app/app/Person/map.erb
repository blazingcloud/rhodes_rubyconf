<script type="text/javascript">
    function initialize() {
      if (GBrowserIsCompatible()) {
        var map = new GMap2(document.getElementById("map_canvas"));
        map.setCenter(new GLatLng(<%= GeoLocation.latitude.to_s %>, <%= GeoLocation.longitude.to_s %>), 13);
 
        // Add 10 markers to the map at random locations
        var bounds = map.getBounds();
        var southWest = bounds.getSouthWest();
        var northEast = bounds.getNorthEast();
        var lngSpan = northEast.lng() - southWest.lng();
        var latSpan = northEast.lat() - southWest.lat();
        
		
		var marker; 
		<% @people.each do |person| %>
		
		  <% if person.latitude.nil? or person.latitude.empty? %>
		  	marker = new google.maps.Marker(<%= person.zipcode.to_s %>); 
		  <% else %>
          	marker = new GLatLng(<%= person.latitude.to_s %>,<%= person.longitude.to_s %>);
		  <% end %>  
		  
		  map.addOverlay(new GMarker(marker));
		<% end %>
      }
    }
</script>
<div id="map_canvas" style="width: 100%; height: 450px;"></div>